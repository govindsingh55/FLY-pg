# Database (local development)
DB_FILE_NAME=mydb.sqlite

# Auth
BETTER_AUTH_URL=http://localhost:5173
BETTER_AUTH_SECRET=your-secret-key-here

# Storage Configuration
# Options: 'local', 's3', 'r2-s3'
# Note: In Cloudflare Workers, R2 binding is used automatically
STORAGE_TYPE=local

# Local storage (default for development)
LOCAL_STORAGE_DIR=
LOCAL_STORAGE_BASE_URL=/uploads

# S3/R2 Configuration (for S3-compatible access outside Workers)
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
S3_BUCKET=fly-pg-media
S3_REGION=auto

# R2 Public URL (for serving files in production)
R2_PUBLIC_URL=https://pub-xxx.r2.dev