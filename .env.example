DATABASE_URI=mongodb://127.0.0.1/your-database-name
PAYLOAD_SECRET=YOUR_SECRET_HERE

# PhonePe Payment Gateway Testing Configuration
# Copy this to .env.local for local development

# =================================
# PHONEPE PAYMENT (if using payments)
# =================================
PHONEPE_MERCHANT_ID=******
PHONEPE_SALT_KEY=******
PHONEPE_KEY_INDEX=1
PHONEPE_BASE_URL=https://api-uat.phonepe.com/apis/hermes

# Site URL for redirects and callbacks
# IMPORTANT: Set this to your production domain to prevent localhost URLs in preview links
NEXT_PUBLIC_SITE_URL=https://flycolive.com

# PhonePe Callback Verification Path (optional, defaults to /api/custom/payments/phonepe/callback)
PHONEPE_CALLBACK_VERIFY_PATH=/api/custom/payments/phonepe/callback

# Node Options
NODE_OPTIONS="--no-deprecation --no-experimental-strip-types"
PREVIEW_SECRET=test-preview-secret-123

# =================================
# EMAIL SERVICE (RESEND)
# =================================
RESEND_API_KEY=****
RESEND_FROM_ADDRESS=*****
RESEND_FROM_NAME=FLY PG
